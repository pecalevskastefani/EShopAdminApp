@{
}
@model List<EShopAdminApp.Models.Order>
<h2>Orders</h2>
<div class="row">
    <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export  Orders</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="col-md-1">
                #
            </th>
            <th class="col">
                Customer Details
            </th>
            <th class="col">
                Number of products
            </th>
            <th class="col">
              
            </th>
        </tr>
    </thead>
    <tbody>
        @{ 
            var i = 1;
            foreach(var item in Model)
            {
                <tr>
                    <td>
                        @(i++)
                    </td>
                    <td>
                        @item.OrderBy.Username
                    </td>
                    <td>
                        @item.Products.Count
                    </td>
                    <td>
                        <a calss="btn btn-danger"
                           href="/Order/GetOrderDetails/@item.Id">Details</a>
                        <a calss="btn btn-info"
                           href="/Order/SavePdf/@item.Id">Create invoice</a>
                    </td>
                    
                </tr>
            }
        }
    </tbody>
</table>